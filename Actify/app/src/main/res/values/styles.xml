<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Actify">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginBottom">292dp</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/actify_light_grey</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Event_Date">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/actify_event_date</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Actify_Button" parent="Actify">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">105dp</item>
        <item name="android:layout_marginTop">72dp</item>
        <item name="android:layout_marginEnd">105dp</item>
        <item name="android:background">@color/actify_blue</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/actify_dark_grey</item>
    </style>

</resources>
